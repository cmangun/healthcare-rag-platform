# Healthcare RAG Platform Configuration
# Copy to .env and fill in your values

# ===================
# Required Settings
# ===================

# OpenAI API Key (or Azure OpenAI)
OPENAI_API_KEY=sk-your-key-here

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=healthcare-rag

# ===================
# Database Settings
# ===================

# PostgreSQL for audit logs (optional for development)
DATABASE_URL=postgresql://user:password@localhost:5432/rag_audit

# Redis for caching (optional)
REDIS_URL=redis://localhost:6379

# ===================
# Governance Settings
# ===================

# PHI Detection Mode: "redact" or "block"
PHI_DETECTION_MODE=redact

# Token Limits
DAILY_TOKEN_LIMIT=1000000
MONTHLY_TOKEN_LIMIT=10000000
PER_REQUEST_TOKEN_LIMIT=4096

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ===================
# Security Settings
# ===================

# JWT Secret for API authentication
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ===================
# Logging Settings
# ===================

LOG_LEVEL=INFO
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for HIPAA
